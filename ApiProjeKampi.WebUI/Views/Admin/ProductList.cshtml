@model List<ResultProductListWithCategoryDto>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<div class="col-12 col-md-12 col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="section-title">Ürünler</div>
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th scope="col">Adı</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Fiyat</th>
                            <th scope="col">Image</th>
                            <th scope="col">Kategori</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncele</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="align-content:center">@item.Name</td>
                                <td style="align-content:center">@(item.Description.Length < 20 ? item.Description : item.Description.Substring(0, 20) + "...")</td>
                                <td style="align-content:center">@(item.Price.ToString("N2") + " ₺")</td>
                                <td>
                                    <img alt="Bakery item thumbnail"
                                         src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/default-150x150.png" : item.ImageUrl)"
                                         style="width: 3rem;height: 3rem;border-radius: 9999px;object-fit: cover;margin-left: auto;margin-right: auto;border: 2px solid #f1f5f9;" />
                                </td>
                                <td style="align-content:center">@item.CategoryName</td>
                                <td><a asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">Sil</a></td>
                                <td><a asp-controller="Admin" asp-action="EditProduct" asp-route-id="@item.ProductId" class="btn btn-success btn-sm">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-controller="Admin" asp-action="CreateProduct" class="btn btn-primary btn-sm">Ekle</a>
            </div>
        </div>
    </div>
</div>

