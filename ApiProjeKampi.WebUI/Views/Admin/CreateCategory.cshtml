@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<div class="col-12 col-md-12 col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="section-title">Ekleme İşlemi</div>
            <div class="table-responsive">
                <form method="post">
                    <label asp-for="Name">Ad</label>
                    <input type="text" class="form-control" asp-for="Name" />
                    <br />
                    <button type="submit" class="btn btn-primary">Ekle</button>
                    <a asp-controller="Admin" asp-action="CategoryList" class="btn btn-danger">Geri</a>
                </form>
            </div>
        </div>
    </div>
</div>

